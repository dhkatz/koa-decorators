{
  "name": "@dhkatz/koa-decorators",
  "version": "1.0.2",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "test/"
  ],
  "scripts": {
    "build": "tsc --declaration --emitDeclarationOnly && node esbuild.config.js",
    "test": "jest --coverage --verbose --ci --forceExit --detectOpenHandles",
    "lint": "eslint src/**/*.ts test/**/*.ts && tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "joi-to-swagger": "^6.0.1",
    "joiful": "^3.0.2"
  },
  "peerDependencies": {
    "@koa/router": "^10.1.1",
    "handlebars": "^4.7.7",
    "koa": "^2.13.4",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/node": "^17.0.8",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui": "^3.52.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "esbuild": "^0.14.45",
    "esbuild-node-externals": "^1.4.1",
    "esbuild-plugin-inline-import": "^1.0.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "koa-bodyparser": "^4.3.0",
    "prettier": "^2.5.1",
    "supertest": "^6.2.0",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "resolutions": {
    "joi": "17.5.0"
  },
  "overrides": {
    "joi": "17.5.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "esbuild.config.js"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "testEnvironment": "node",
    "collectCoverage": true,
    "testRegex": "/test/.*\\.test\\.[jt]s$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!<rootDir>/node_modules/"
    ]
  }
}
